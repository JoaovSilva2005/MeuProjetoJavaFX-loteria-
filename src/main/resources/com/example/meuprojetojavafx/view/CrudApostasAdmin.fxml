<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Alert?>
<?import javafx.scene.control.Alert.AlertType?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.meuprojetojavafx.controller.ApostasAdminController">
    <children>
        <!-- ListView para exibir as apostas -->
        <ListView fx:id="listViewApostas" layoutX="14.0" layoutY="14.0" prefHeight="300.0" prefWidth="400.0" />

        <!-- Caixa de botões para ações CRUD -->
        <HBox layoutX="14.0" layoutY="320.0" spacing="10.0">
            <Button fx:id="buttonCriar" text="Criar Aposta" onAction="#criarAposta" />
            <Button fx:id="buttonEditar" text="Editar Aposta" onAction="#editarAposta" />
            <Button fx:id="buttonExcluir" text="Excluir Aposta" onAction="#excluirAposta" />
        </HBox>
    </children>
</AnchorPane>
